<%= form_for @author do |f| %>

  <%= errors_for(@author) %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :biography %>
    <%= f.text_area :biography, :class => "form-control" %>
  </div>


  <%= f.submit 'Save', :class => 'btn btn-primary' %>

<% end %>